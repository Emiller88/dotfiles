[global/wm]
margin-top = 0
margin-bottom = 28

[bar/top]
monitor = ${env:MONITOR:}
top = true
fixed-center = true
border-size = 0
wm-restack = bspwm

width = 100%
height = 35
radius = 0

padding-left = 2
padding-right = 2
tray-position = left

modules-right = vpn-openvpn-status wlan date powermenu
modules-center = bspwm
modules-left = pulseaudio battery

background = ${colors.bg}
foreground = ${colors.fg}

font-0 = "Iosevka:weight=regular:size=17;2"
font-1 = "Siji:pixelsize=19;2"
font-2 = "FontAwesome:fontformat=truetype:size=18;1"

scroll-up = bspc desktop -f prev.local
scroll-down = bspc desktop -f next.local

[module/backlight]
type = internal/xbacklight

[module/bspwm]
type = internal/bspwm
format = <label-mode> <label-state>
index-sort = true

label-focused = [%name%]

label-occupied = %name%

label-urgent =  %name%
label-urgent-background = ${colors.red}

label-empty = %name%
label-empty-foreground = #55

[module/date]
type = internal/date
date-alt = %A   %H:%M
date = %A %y/%m/%d   %H:%M:%S
interval = 1

format-foreground = ${colors.grn}

[module/powermenu]
type = custom/menu

expand-right = true

; FIXME use icons
label-open = power
label-open-foreground = ${colors.red}
label-open-underline = ${colors.red}

label-close = close
label-close-foreground = ${colors.wht}
label-close-underline = ${colors.wht}

menu-0-0 = lock
menu-0-0-foreground = ${colors.cyn}
menu-0-0-underline = ${colors.cyn}
; FIXME
menu-0-0-exec = betterlockscreen -l

menu-0-1 = logout
menu-0-1-foreground = ${colors.grn}
menu-0-1-underline = ${colors.grn}
menu-0-1-exec = kill -9 -1

menu-0-2 = restart
menu-0-2-foreground = ${colors.ylw}
menu-0-2-underline = ${colors.ylw}
menu-0-2-exec = shutdown -r now

menu-0-3 = shutdown
menu-0-3-foreground = ${colors.red}
menu-0-3-underline = ${colors.red}
menu-0-3-exec = shutdown -h now

