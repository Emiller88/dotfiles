super + alt + Escape
	bspc quit

super + {_,shift + }q
	bspc node -{c,k}

super + t
	bspc desktop -l next

super + apostrophe
	bspc window -s last

# focus/swap the node in the given direction
super + {_,ctrl +}{h,j,k,l}
	~/.config/bspwm/bin/bspc-focus {_,-m }{west,south,north,east}

super + shift + {_,ctrl +}{h,j,k,l}
	~/.config/bspwm/bin/bspc-swap {_,-m }{west,south,north,east}

super + {_,shift +}{1-9,0}
	bspc {desktop -f,node -d} {1-9,10}

# Attach to a detached session. If none is available create a new one, rather
# than attach to one that is already attached to elsewhere.
super + Return
	xst -e bash -c "(tmux ls | grep -vq attached && tmux at) || tmux"

super + w
  firefox

super + e
  zsh -c emacs

super + shift + a
    autorandr -c

super + grave
	st-scratch

super + shift + grave
	emacsclient -e '(open-scratch-frame)'

super + space
	~/.config/rofi/bin/rofi-appmenu

super + Tab
	~/.config/rofi/bin/rofi-windowmenu

super + backslash
	~/.config/rofi/bin/rofi-passmenu

super + Escape
	pkill -USR1 -x sxhkd

{Prior,Next}
	:

# set the window state
super + {i,shift + i,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}


super + alt + a
    zzz

super + alt + s
	slock systemctl suspend -i

#
# Media keys
#

# screenshot region
Print
	scrcap
super + Print
	scrrec -s ~/recordings/$(date +%F-%T).mp4
super + ctrl + Print
	scrrec -s ~/recordings/$(date +%F-%T).gif

XF86MonBrightnessUp
	light -A 5
XF86MonBrightnessDown
	light -U 5

XF86AudioMute
	amixer -q set Master toggle
XF86AudioLowerVolume
	amixer -q set Master 10%- unmute
XF86AudioRaiseVolume
	amixer -q set Master 10%+ unmute

XF86Audio{Play,Pause}
    mpc -q toggle
XF86Audio{Prev,Next}
	mpc -q {prev,next}
