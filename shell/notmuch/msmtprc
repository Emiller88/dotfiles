# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Gmail
account        gmail
host           smtp.gmail.com
port           587
from           edmund.a.miller@gmail.com
user           edmund.a.miller
passwordeval   pass mail/gmail

# eman
account        eman
host           smtp.gmail.com
port           587
from           eman0088@gmail.com
user           eman0088
passwordeval   pass mail/eman

# utd
account        utd
host           smtp.office365.com
port           587
from           eam150030@utdallas.edu
user           eam150030@utdallas.edu
passwordeval   pass mail/utd

# Set a default account
account default : gmail
